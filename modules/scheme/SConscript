###############################################################
# SConscript for the Scheme PLT modules
#
# Should be ok for cross platform

import os
	 
Import("Prefix", "FluxusVersion", "CollectsLocation", "BinaryModulesLocation")

Scripts    = ["fluxus-boot.scm", 
			  "fluxus-canvas.ss", 
			  "fluxus-input.ss",
			  "fluxus-camera.ss",
			  "fluxus-obj-import.ss", 
			  "autodoc.ss" ]

Install        = CollectsLocation
InstallStartup = os.environ["HOME"]+"/.fluxus/"

env = Environment()
env.Install(Install, Scripts)
env.Install(InstallStartup, ["startup.scm"])
env.Alias('install', Install)
env.Alias('install', InstallStartup)
